<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E45812" />
            <gradient android:angle="-90" android:startColor="#E37B35" android:endColor="#EA9D14"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D3B20E" />
            <solid android:color="#E84B0B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BF480D" />
            <gradient android:angle="-90" android:startColor="#F44336" android:endColor="#E3640F" />
        </shape>
    </item>
</selector>